@model star_wars.Application.Common.Models.ViewModels.Character.InfoCharacterViewModel

@{
    ViewBag.Title = $"Информация о персонаже - {@Model.Name}";
    Layout = "_Layout";
}

<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center mb-4">Информация о персонаже</h1>
        <div class="col-md-8">
            <div class="card bg-dark text-white border-white p-2">
                <div class="card-body d-flex flex-column bg-dark">

                    <div class="d-flex flex-row justify-content-between">

                        <div>
                            <h5 class="card-title">
                                <h1>@Model.Name (@Model.OriginName)</h1></h5>
                            <div class="mt-4">
                                <p class="card-text text-white"><strong>Дата рождения:</strong> @Math.Abs(Model.Birthdate) @(Model.Birthdate > 0 ? "ПБЯ" : "ДБЯ")</p>
                                <p class="card-text text-white"><strong>Планета:</strong> @Model.Planet</p>
                                <p class="card-text text-white"><strong>Пол:</strong> @Model.Gender</p>
                                <p class="card-text text-white"><strong>Раса:</strong> @Model.Species</p>
                                <p class="card-text text-white"><strong>Рост:</strong> @Model.Height м</p>
                                <p class="card-text text-white"><strong>Цвет волос:</strong> @Model.HairColor</p>
                                <p class="card-text text-white"><strong>Цвет глаз:</strong> @Model.EyeColor</p>
                            </div>
                        </div>

                        <div class="d-flex flex-column w-25 me-5 mt-5 h-auto align-items-center">
                            <span class="card-subtitle mb-2 text-center text-muted">Фильмы</span>
                            <ul>
                                @foreach (var movie in Model.Movies)
                                {
                                    <li class="text-white mb-2 w-100 text-center" style="list-style: none">@movie.Title</li>
                                }
                            </ul>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <p class="card-text text-white"> @Model.Description</p>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
