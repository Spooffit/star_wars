@model star_wars.Application.Common.Models.ViewModels.Character.CharacterViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-white">
                <div class="card-body d-flex flex-column bg-dark">

                    <div class="d-flex flex-row justify-content-between">
                        
                        <div>
                            <h5 class="card-title"><h1>@Model.Name (@Model.OriginName)</h1></h5>
                            <p class="card-text text-white"><strong>Дата рождения:</strong> @Math.Abs(Model.Birthdate) @(Model.Birthdate > 0 ? "ПБЯ" : "ДБЯ")</p>
                            <p class="card-text text-white"><strong>Планета:</strong> @Model.Planet.Name</p>
                            <p class="card-text text-white"><strong>Пол:</strong> @Model.Gender</p>
                            <p class="card-text text-white"><strong>Раса:</strong> @Model.Species</p>
                            <p class="card-text text-white"><strong>Рост:</strong> @Model.Height м</p>
                            <p class="card-text text-white"><strong>Цвет волос:</strong> @Model.HairColor</p>
                            <p class="card-text text-white"><strong>Цвет глаз:</strong> @Model.EyeColor</p>
                        </div>

                        <div class="d-flex flex-column align-items-center">
                            <h6 class="card-subtitle mb-2 text-muted">Фильмы</h6>
                            <ul>
                                @foreach (var movie in Model.Movies)
                                {
                                    <li class="text-white mb-2">@movie.Title</li>
                                }
                            </ul>
                        </div>
                    </div>
                    
                    
                    <div class="mt-4">
                        <p class="card-text text-white"> @Model.Description</p>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>
</div>
